<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroung">

    <TextView
        android:id="@+id/textView8"
        style="@style/estilologin2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:text="@string/home"
        android:textSize="24sp" />

    <View
        android:id="@+id/divider"
        android:layout_width="40dp"
        android:layout_height="3dp"
        android:layout_gravity="left"
        android:layout_marginLeft="41dp"
        android:layout_marginTop="2dp"
        android:background="@color/colorAccent" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageViewBatman"
            android:layout_width="76dp"
            android:layout_height="85dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="15dp"
            app:srcCompat="@drawable/batman" />

        <TextView
            android:id="@+id/textViewBatman"
            style="@style/estilohome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/home_batman" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageViewCharada"
            android:layout_width="76dp"
            android:layout_height="85dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="15dp"
            app:srcCompat="@drawable/charada" />

        <TextView
            android:id="@+id/textViewCharada"
            style="@style/estilohome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/home_charada" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageViewCoringa"
            android:layout_width="76dp"
            android:layout_height="85dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="15dp"
            app:srcCompat="@drawable/coringa" />

        <TextView
            android:id="@+id/textViewCoringa"
            style="@style/estilohome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/home_coringa" />
    </LinearLayout>

    <Button
        android:id="@+id/buttonMap"
        style="@style/botaoLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:text="@string/home_button"
        android:background="@color/colorAccent"
        android:textColor="@color/colorWhite" />
</LinearLayout>